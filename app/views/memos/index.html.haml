.container
  = render 'commons/tab'
  - @memos.each do |memo|
    .card.card_memo
      .container
        .card_memo_content.text-right
          .dropdown
            = image_tag "actions.svg",class: 'dropbtn'
            .dropdown-content.mini
              = link_to '編集する',edit_memo_path(memo)
              = link_to '削除する',memo_path(memo),data:{method: 'delete',confirm:'本当に削除してもよろしいですか？'}
        .d-flex
          .card_memo-image
            - if memo.image.attached?
              = image_tag memo.image
            - else
              = image_tag 'water.png'
          .card_memo-detail
            %h2
              = memo.title
            %p.card_memo-category
              = link_to  memos_path(name: memo.category) do
                = memo.category_i18n
            %br
            %p= memo.content
  = paginate @memos
  - if user_signed_in?
    = link_to new_memo_path do
      .float_btn
        new
        %i.fa.fa-plus
